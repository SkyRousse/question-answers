<h3>Add answer</h3>
<form class="add-new-answer">
  <div class="form-group">
    <lable for="author">Your Name</lable>
      {{input value=author id="author"}}
  </div>
  <div class="form-group">
    <lable for="content">Your Answer</lable>
      {{input value=content id="content" type="text-area" class="answer-input"}}
  </div>
  <button class="question-btn-save" {{action 'saveAnswer'}}>Save</button>
</form>
