{{#if addNewQuestion}}
  <h3>Enter your question</h3>
  <div class="form-container">
    <form class="add-new-question">
      <div class="form-group">
        <label for="author">Your Name</label>
          {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Your Question</label>
          {{input value=content id="content" class="question-input"}}
      </div>
      <div class="form-group">
        <label for="additionalNotes">Additional Notes</label>
          {{input value=additionalNotes id="additionalNotes"}}
      </div>
      <div class="form-group">
        <label for="tags">Tag</label>
          {{input value=tag id="tag"}}
      </div>
      <button class="question-btn-save" {{action 'saveQuestion'}}>Save</button>
      <button class="question-btn-close" {{action 'questionFormHide'}}>X</button>
    </form>
  </div>
{{else}}
  <button class="question-btn" {{action 'questionFormShow'}}>Ask a Question</button>
{{/if}}
